		<require-file name="User_Email.template.php" destination="$themedir" />
		<require-file name="User_Email.php" destination="$sourcedir" />
	</install>

	<uninstall for="1.0 - 1.0.99">
		<modification type="file" reverse="true">useremail107.xml</modification>
	</uninstall>

</package-info>