	<uninstall for="1.1 - 1.1.99,1.1 RC3,1.1 RC2">
		<modification type="file" reverse="true">useremail.xml</modification>
	</uninstall>
	<install for="1.0 - 1.0.99">
		<readme>ReadMe.txt</readme>
		<modification type="file">useremail107.xml</modification>
