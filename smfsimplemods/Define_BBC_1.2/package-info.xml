 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">

	<name>Define BBC</name>
	<id>Labradoodle-360:Define_BBC</id>
	<version>1.2</version>
	<homepage>http://www.smfmodders.com/</homepage>
	<type>modification</type>

	<install for="1.1.11, 1.1.12">
	        <readme parsebbc="true">readme.txt</readme>
	        <modification>define_bbc_1.1.xml</modification>
	        <require-file name="define_bbc.gif" destination="$imagesdir/bbc" />
	</install>
	<uninstall for="1.1.11, 1.1.12">
	        <readme parsebbc="true">readme.txt</readme>
	        <modification reverse="true">define_bbc_1.1.xml</modification>
	        <remove-file name="$imagesdir/bbc/define_bbc.gif" />
	</uninstall>

	<install for="2.0 RC2, 2.0 RC3, 2.0 RC4">
		<readme parsebbc="true">readme.txt</readme>
		<modification>define_bbc_2.0.xml</modification>
		<require-file name="define_bbc.gif" destination="$imagesdir/bbc" />
	</install>
	<uninstall for="2.0 RC2, 2.0 RC3, 2.0 RC4">
		<readme parsebbc="true">readme.txt</readme>
		<modification reverse="true">define_bbc_2.0.xml</modification>
		<remove-file name="$imagesdir/bbc/define_bbc.gif" />
	</uninstall>

</package-info>