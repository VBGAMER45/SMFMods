<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>vbgamer45:SMFTraderSystem</id>
	<name>SMF Trader System</name>
	<type>modification</type>
	<version>1.7</version>
	<install for="1.1 - 1.1.99,1.1 RC3,1.1 RC2">
		<readme>ReadMe.txt</readme>
		<modification type="file">smftrader.xml</modification>
		<require-file name="Trader.php" destination="$sourcedir" />
		<require-file name="Trader.template.php" destination="$themedir" />
		<require-file name="Trader.english.php" destination="$themedir/languages" />
		<require-file name="Trader.english-utf8.php" destination="$themedir/languages" />
		<code>smftraderinstall.php</code>
	
	</install>
	<uninstall for="1.1 - 1.1.99,1.1 RC3,1.1 RC2">
		<modification type="file" reverse="true">smftrader.xml</modification>
		<code>UnInstall.php</code>
	</uninstall>
	

	
	
	<install for="2.0 - 2.0.99,2.0 RC2,2.0 RC3,2.0 RC4,2.0 RC5">
		<readme>ReadMe.txt</readme>
		<modification type="file">smftrader2rc2.xml</modification>
		<require-file name="Trader2.php" destination="$sourcedir" />
		<require-file name="Trader2.template.php" destination="$themedir" />
		<require-file name="Trader.english.php" destination="$themedir/languages" />
		<require-file name="Trader.english-utf8.php" destination="$themedir/languages" />
		<code>smftraderinstall2.php</code>
	
	</install>
	<uninstall for="2.0 - 2.0.99,2.0 RC2,2.0 RC3,2.0 RC4,2.0 RC5">
		<modification type="file" reverse="true">smftrader2rc2.xml</modification>
		<code>UnInstall.php</code>
	</uninstall>
</package-info>