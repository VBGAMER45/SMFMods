<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<name>Copy Topics</name>
	<id>karlbenson:copytopics</id>
	<type>modification</type>
	<version>1.6</version>

	<!--// Install for SMF 1.1.x versions only //-->
	<install for="1.1 - 1.1.99">
		<readme type="file" parsebbc="true">readme.txt</readme>
		<modification>11x/install.xml</modification>
		<modification>languages.xml</modification>
		<require-file name="11x/CopyTopic.php" destination="$sourcedir" />
		<require-file name="11x/CopyTopic.template.php" destination="$themedir" />
		<require-file name="images/admin_copy.gif" destination="$themedir/images/buttons" />
		<require-file name="images/quick_copy.gif" destination="$themedir/images/icons" />
	</install>
	
	<!--// Uninstall for SMF 1.1.x versions only //-->
	<uninstall for="1.1 - 1.1.99">
		<modification reverse="true">11x/install.xml</modification>
		<modification reverse="true">languages.xml</modification>
		<remove-file name="$sourcedir/CopyTopic.php" />
		<remove-file name="$themedir/CopyTopic.template.php" />
		<remove-file name="$themedir/images/buttons/admin_copy.gif" />
		<remove-file name="$themedir/images/icons/quick_copy.gif" />
		<code>UnInstall.php</code>
	</uninstall>
	
