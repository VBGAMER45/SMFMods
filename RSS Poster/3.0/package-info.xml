		<require-file name="FeedPoster.template.php" destination="$themedir" />
		<require-file name="FeedPoster.english.php" destination="$themedir/languages" />
		<require-file name="FeedPoster.english-utf8.php" destination="$themedir/languages" />
		<code>FeedPostersql.php</code>
	</install>
	
	<upgrade from="all" for="1.1 - 1.1.99">
