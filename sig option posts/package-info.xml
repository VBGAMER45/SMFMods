<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>vbgamer45:SigPost</id>
	<name>Signature Option Post</name>
	<type>modification</type>
	<version>2.0</version>

	<install for="1.1 - 1.1.99,1.1 RC3,1.1 RC2">
		<readme>ReadMe.txt</readme>
		<modification type="file">sig.xml</modification>
		<code>siginstall.php</code>
	</install>

	<uninstall for="1.1 - 1.1.99,1.1 RC3,1.1 RC2">
		<modification type="file" reverse="true">sig.xml</modification>
		<code>UnInstall.php</code>
	</uninstall>
	
	<install for="2.0 - 2.0.99, 2.0 RC2, 2.0 RC3, 2.0 RC4, 2.0 RC5">
		<readme>ReadMe.txt</readme>
		<modification type="file">sig2.xml</modification>
		<code>siginstall2.php</code>
	</install>
		
	<uninstall for="2.0 - 2.0.99, 2.0 RC2, 2.0 RC3, 2.0 RC4, 2.0 RC5">
		<modification type="file" reverse="true">sig2.xml</modification>
		<code>UnInstall.php</code>
	</uninstall>


	<install for="2.1 - 2.1.99">
		<readme>ReadMe.txt</readme>
		<redirect url="?action=admin;area=postsettings;sa=posts">redirect.txt</redirect>

		<modification type="file">sig2.1.xml</modification>
		<code>siginstall2.php</code>
	</install>
		
	<uninstall for="2.1 - 2.1.99">
		<modification type="file" reverse="true">sig2.1.xml</modification>
		<code>UnInstall.php</code>
	</uninstall>	
</package-info>