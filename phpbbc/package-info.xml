<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>vbgamer45:phpbbc</id>
	<name>php BBC Button</name>
	<type>modification</type>
	<version>1.0</version>

	<install for="1.1 - 1.1.99">
		<readme>ReadMe.txt</readme>
		<modification type="file">phpbbc.xml</modification>
		<require-file name="php.gif" destination="$themedir/images/bbc" />
	</install>

	<uninstall for="1.1 - 1.1.99">
		<modification type="file" reverse="true">phpbbc.xml</modification>
		<code>UnInstall.php</code>
	</uninstall>
	<install for="2.0 - 2.0.99, 2.0 RC2, 2.0 RC3">
		<readme>ReadMe.txt</readme>
		<modification type="file">phpbbc2.xml</modification>
		<require-file name="php.gif" destination="$themedir/images/bbc" />
	</install>

	<uninstall for="2.0 - 2.0.99, 2.0 RC2, 2.0 RC3">
		<modification type="file" reverse="true">phpbbc2.xml</modification>
		<code>UnInstall.php</code>
	</uninstall>
</package-info>