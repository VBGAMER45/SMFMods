<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>vbgamer45:awesomepostratings</id>
	<name>Awesome Post Ratings</name>
	<type>modification</type>
	<version>1.0</version>
	
	<install for="2.0 - 2.0.99">
		<readme>ReadMe.txt</readme>
		<modification type="file">awesome2.xml</modification>
		<require-file name="AwesomePostRatings2.php" destination="$sourcedir" />
		<require-file name="AwesomePostRatingsHooks.php" destination="$sourcedir" />
		<database>install2.php</database>
		<code>dohooks.php</code>
	</install>
	
	<uninstall for="2.0 - 2.0.99">
		<remove-file name="$sourcedir/AwesomePostRatings2.php" />
		<remove-file name="$sourcedir/AwesomePostRatingsHooks.php" />
		<modification type="file" reverse="true">awesome2.xml</modification>
		<code>dohooks.php</code>
	</uninstall>
	

</package-info>